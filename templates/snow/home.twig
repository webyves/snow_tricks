{% extends 'base.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
<h1>Bienvenue</h1>
<p>Liste des figures</p>
<div class="tricks row">
    {% for trick in tricks %}
        {% include 'snow/confirmDeleteTrickModal.twig' %}
        <div class="col-3">
            <div class="card">
                {% if trick.trickImages[0] is defined %}
                <img class="card-img-top" src="{{ asset('uploads/trick_images/' ~ trick.trickImages[0].link) }}" alt="Image Trick {{ trick.id }}">
                {% else %}
                <img class="card-img-top" src="https://place-hold.it/1280x720/666" alt="Snow Trick Image par default">
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title">{{ trick.name }}</h5>
                    <h6 class="text-muted">{{ trick.dateCreate | date('d-m-Y : H:i') }}</h6>
                    <div class="card-link btn-group">
                        <a href="{{ path('show_trick', {'id': trick.id}) }}" class="btn btn-primary"><em class="far fa-eye"></em> Lire plus</a>
                        {% if app.user %}
                        <a href="{{ path('edit_trick', {'id': trick.id}) }}" class="btn btn-warning"><em class="fas fa-pencil-alt"></em></a>
                        <a data-toggle="modal" href="#confirmDeleteModal_{{ trick.id }}" class="btn btn-danger"><em class="fas fa-trash-alt"></em></a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
