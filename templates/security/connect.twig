{% extends 'base.twig' %}

{% block title %}connectez vous{% endblock %}

{% block body %}
    {% if error %}
	    <div class="alert alert-danger alert-dismissible fade show" role="alert">
	        {{ error.messageKey|myHTML }}
	        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
	            <span aria-hidden="true">&times;</span>
	        </button>
	    </div>
    {% endif %}

	<h1>page de connexion</h1>
	<form action="{{ path('security_login') }}" method="post">
		<div class="form-group">
			<label for="loginEmailInput">Votre email :</label>
			<input placeholder="Adresse eMail ..." required="required" name="_username" id="loginEmailInput" class="form-control" type="text">
		</div>
		<div class="form-group">
			<label for="loginPwdInput">Votre Mot de passe :</label>
			<input type="password" placeholder="mot de passe ..." required="required" name="_password" id="loginPwdInput" class="form-control">
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-success">Je me Connecte</button>
		</div>
	</form>
	<h2>Vous avez perdu votre mot de passe ?</h2>
	<a href="{{ path('ask_reset_pwd') }}" class="btn btn-info">Mot de passe oubli√©</a>
	<h2>Pas Encore Inscit ?</h2>
	<a href="{{ path('security_registration') }}" class="btn btn-info">Je souhaite m'inscrire</a>

{% endblock %}
